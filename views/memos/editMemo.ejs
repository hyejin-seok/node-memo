<%- include("../partials/header") %>

<h1>Edit Memo</h1>

<form method="post" action="/memos/<%= memo.id %>/edit">
  <input type="hidden" name="_method" value="PUT" />

  <label for="title">Title:</label>
  <input
    type="text"
    id="title"
    name="title"
    value="<%= memo.title %>"
    required
  />

  <label for="content">Content:</label>
  <textarea id="content" name="content" required><%= memo.content %></textarea>

  <input type="submit" value="Update Memo" />
</form>

<form
  method="post"
  action="/memos/<%= memo.id %>?_method=DELETE"
  style="display: inline"
>
  <button
    type="submit"
    class="button"
    onclick="return confirm('Are you sure you want to delete this memo?')"
  >
    Delete
  </button>
</form>

<a href="/memos">Go Back</a>

