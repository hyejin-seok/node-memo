<%- include("../partials/header", { pageTitle }) %>

<div class="container">
  <div class="auth-container">
    <h1>Login</h1>
    <div class="auth-icon-box">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M12.1992 12C14.9606 12 17.1992 9.76142 17.1992 7C17.1992 4.23858 14.9606 2 12.1992 2C9.43779 2 7.19922 4.23858 7.19922 7C7.19922 9.76142 9.43779 12 12.1992 12Z"
          stroke="#7d5026"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <path
          d="M3 22C3.57038 20.0332 4.74795 18.2971 6.36438 17.0399C7.98081 15.7827 9.95335 15.0687 12 15"
          stroke="#7d5026"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <path
          d="M15 18H23"
          stroke="#7d5026"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <path
          d="M20 15L23 18L20 21"
          stroke="#7d5026"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </div>

    <p class="auth-msg">
      Create a New Account?
      <a href="/signup"> Sign up </a>
    </p>

    <form action="/login" method="POST">
      <div class="input-container">
        <label for="username">Username: </label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Input your username"
          required
        />
      </div>
      <div class="input-container">
        <label for="password">Password: </label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Input your password"
          required
        />
      </div>
      <button type="submit">Login</button>

      <% if (error === "1") { %>
      <p class="error-message">Invalid login details</p>
      <% } %> <% if (logout === "success") { %>
      <p class="success-message">You've successfully logged out!</p>
      <% } %>
    </form>
  </div>
</div>

<%- include("../partials/footer") %>
